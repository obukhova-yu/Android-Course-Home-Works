<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/main_pickture"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_banner"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constrainedHeight="true"
        android:minHeight="200dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/vertical_line1"
        android:orientation="vertical"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintGuide_begin="110dp"
        app:layout_editor_absoluteX="0dp"
        app:layout_editor_absoluteY="0dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/vertical_line2"
        android:orientation="vertical"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintGuide_begin="300dp"
        app:layout_editor_absoluteX="0dp"
        app:layout_editor_absoluteY="0dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/horizontal_line1"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="250dp"
        app:layout_editor_absoluteX="0dp"
        app:layout_editor_absoluteY="0dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/horizontal_line2"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="350dp"
        app:layout_editor_absoluteX="0dp"
        app:layout_editor_absoluteY="0dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/horizontal_line3"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="450dp"
        app:layout_editor_absoluteX="0dp"
        app:layout_editor_absoluteY="0dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <TextView
        android:id="@+id/voice_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="(650)555-12-34"
        android:textSize="20dp"
        android:textColor="@color/black"
        app:layout_constraintLeft_toLeftOf="@id/vertical_line1"
        app:layout_constraintTop_toBottomOf="@+id/horizontal_line1" />

    <TextView
        android:id="@+id/google_voice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Google Voice"
        android:paddingBottom="30dp"
        android:textSize="16dp"
        android:textColor="@android:color/darker_gray"
        app:layout_constraintLeft_toLeftOf="@id/vertical_line1"
        app:layout_constraintTop_toBottomOf="@id/voice_phone" />

    <TextView
        android:id="@+id/mobile_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="(650)555-43-21"
        android:textSize="20dp"
        android:textColor="@color/black"
        app:layout_constraintLeft_toLeftOf="@id/vertical_line1"
        app:layout_constraintTop_toBottomOf="@+id/horizontal_line2" />

    <TextView
        android:id="@+id/mobile_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mobile"
        android:textSize="16dp"
        android:textColor="@android:color/darker_gray"
        app:layout_constraintLeft_toLeftOf="@id/vertical_line1"
        app:layout_constraintTop_toBottomOf="@id/mobile_phone"/>

    <TextView
        android:id="@+id/email_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="studio@android.com"
        android:textSize="20dp"
        android:textColor="@color/black"
        app:layout_constraintLeft_toLeftOf="@id/vertical_line1"
        app:layout_constraintTop_toBottomOf="@+id/horizontal_line3" />

    <TextView
        android:id="@+id/work_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Work"
        android:textSize="16dp"
        android:textColor="@android:color/darker_gray"
        app:layout_constraintLeft_toLeftOf="@id/vertical_line1"
        app:layout_constraintTop_toBottomOf="@id/email_text"/>

    <ImageView
        android:id="@+id/star_img"
        android:src="@drawable/ic_round_star"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        app:layout_constraintBottom_toTopOf="@id/horizontal_line1"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/vertical_line2"
        />

    <ImageView
        android:id="@+id/phone_img"
        android:src="@drawable/ic_handset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/horizontal_line1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="@id/vertical_line1"
        />

    <ImageView
        android:id="@+id/message_img1"
        android:src="@drawable/ic_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/horizontal_line1"
        app:layout_constraintLeft_toLeftOf="@id/vertical_line2"
        app:layout_constraintRight_toRightOf="parent"
        />

    <ImageView
        android:id="@+id/message_img2"
        android:src="@drawable/ic_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/horizontal_line2"
        app:layout_constraintLeft_toLeftOf="@id/vertical_line2"
        app:layout_constraintRight_toRightOf="parent"
        />

    <ImageView
        android:id="@+id/email_img"
        android:src="@drawable/ic_letter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/horizontal_line3"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="@id/vertical_line1"
        />

    <View
        android:id="@+id/grey_line"
        app:layout_constraintHeight="5dp"
        app:layout_constraintWidth="250dp"
        android:background="@android:color/darker_gray"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        app:layout_constraintTop_toBottomOf="@id/horizontal_line2"
        app:layout_constraintLeft_toLeftOf="@id/vertical_line1"
        app:layout_constraintRight_toRightOf="parent"
        />



</androidx.constraintlayout.widget.ConstraintLayout>





