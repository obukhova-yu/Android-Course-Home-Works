<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TaskCreationActivity">

    <include
        android:id="@+id/include"
        layout="@layout/app_tool_bar" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/textField"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="@string/edit_text_title"
        android:textAppearance="@style/TextAppearance.ToDoLListApp.Task.Category"
        app:boxBackgroundColor="@color/white"
        android:layout_marginHorizontal="@dimen/margin_norm"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toTopOf="parent"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/add_button_new_task"
        android:layout_width="@dimen/button_size"
        android:layout_height="@dimen/button_size"
        android:insetLeft="0dp"
        android:insetTop="0dp"
        android:insetRight="0dp"
        android:insetBottom="0dp"
        app:cornerRadius="20dp"
        app:icon="@drawable/ic_plus"
        app:iconGravity="textStart"
        app:iconPadding="0dp"
        app:iconTint="@color/white"
        android:layout_marginEnd="@dimen/margin_norm"
        android:layout_marginBottom="@dimen/margin_norm"
        android:backgroundTint="@color/red"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>